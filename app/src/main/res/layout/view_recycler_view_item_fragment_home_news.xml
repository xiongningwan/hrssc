<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:id="@+id/content_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base11dp">

        <ImageView
            android:id="@+id/point"
            android:layout_width="@dimen/base5dp"
            android:layout_height="@dimen/base5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/view_point_blue"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/base5dp"
            android:layout_toEndOf="@id/point"
            android:text="关于证明办理最新规则"
            android:textColor="@color/text_content_gray"
            android:textSize="@dimen/project_text_size_dp_16"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_rl"
        android:layout_marginBottom="@dimen/base11dp"
        android:layout_marginStart="@dimen/base11dp"
        android:layout_marginTop="@dimen/base11dp"
        android:text="2017-2-14"
        android:textColor="@color/project_color_general_hyperlink"
        android:textSize="@dimen/project_text_size_dp_12"/>

</RelativeLayout>
