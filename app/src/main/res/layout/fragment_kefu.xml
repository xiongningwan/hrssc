<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maiyu.hrssc.home.frament.HomeFragment"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/project_head_view_hight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_title_gray"
                android:textSize="@dimen/project_text_number_size_dp_19"/>


            <RelativeLayout
                android:id="@+id/msg_btn"
                android:layout_width="@dimen/base50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/base8dp">

                <ImageView
                    android:id="@+id/msg_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:src="@mipmap/icon_xiaoxi"/>


                <View
                    android:id="@+id/msg_point"
                    android:layout_width="@dimen/base5dp"
                    android:layout_height="@dimen/base5dp"
                    android:layout_alignTop="@id/msg_iv"
                    android:layout_marginStart="-7dp"
                    android:layout_marginTop="@dimen/base1dp"
                    android:layout_toEndOf="@id/msg_iv"
                    android:background="@drawable/view_point_red"
                    android:visibility="visible"/>

            </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/pic_beijing">


        <ImageView
            android:id="@+id/kefu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_zixunan"
            android:layout_centerInParent="true"/>
    </RelativeLayout>



</LinearLayout>
