<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.maiyu.hrssc.home.activity.XZZMBLActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.maiyu.hrssc.base.view.HeadView
            android:id="@+id/head_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/project_head_view_hight">

        </com.maiyu.hrssc.base.view.HeadView>


        <include layout="@layout/view_space_layout"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base84dp">

            <ImageView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:src="@mipmap/icon_city"/>

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base10dp"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_toEndOf="@id/city"
                android:text="深圳"
                android:textColor="@color/text_title_gray"
                android:textSize="@dimen/base16dp"/>

            <RelativeLayout
                android:id="@+id/blsm_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/city_name"
                android:layout_marginBottom="@dimen/base10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="办理说明"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/icon_xianghou"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignStart="@id/city_name"
                android:layout_centerVertical="true"
                android:background="@mipmap/line"/>
        </RelativeLayout>

        <include layout="@layout/view_space_layout"/>

        <RelativeLayout
            android:id="@+id/get_style_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base45dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="领取方式"/>

            <TextView
                android:id="@+id/get_style_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/base5dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_toStartOf="@+id/xh"
                android:text="自助打印"
                android:textColor="@color/text_title_gray"/>

            <ImageView
                android:id="@+id/xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@mipmap/icon_xianghou"/>
        </RelativeLayout>

        <include layout="@layout/view_space_layout"/>


        <RelativeLayout
            android:id="@+id/choose_mould_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base45dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="选择模版"/>

            <TextView
                android:id="@+id/choose_mould_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/base5dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_toStartOf="@+id/choose_mould_xh"
                android:text="招商银行模版"
                android:textColor="@color/text_title_gray"/>

            <ImageView
                android:id="@+id/choose_mould_xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@mipmap/icon_xianghou"/>
        </RelativeLayout>


        <include layout="@layout/view_space_layout"/>

        <RelativeLayout
            android:id="@+id/choose_language_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base45dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="开具语言"/>

            <TextView
                android:id="@+id/choose_language_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/base5dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_toStartOf="@+id/choose_language_xh"
                android:text="中文"
                android:textColor="@color/text_title_gray"/>

            <ImageView
                android:id="@+id/choose_language_xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@mipmap/icon_xianghou"/>
        </RelativeLayout>

        <include layout="@layout/view_space_layout"/>


        <RelativeLayout
            android:id="@+id/simple_desc_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base45dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="描述"/>

            <TextView
                android:id="@+id/simple_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginEnd="@dimen/base5dp"
                android:layout_toStartOf="@+id/simple_desc_xh"
                android:text="填写"
                android:textColor="@color/text_title_gray"/>

            <ImageView
                android:id="@+id/simple_desc_xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@mipmap/icon_xianghou"/>
        </RelativeLayout>

        <include layout="@layout/view_space_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/base5dp"
            android:text="图片(选填)"/>

        <com.maiyu.hrssc.base.image.PickImageView
            android:id="@+id/pcik_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/base5dp">

        </com.maiyu.hrssc.base.image.PickImageView>


        <include layout="@layout/view_space_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/base5dp"
            android:text="备注"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/base5dp"
            android:background="@mipmap/line"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base90dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/base10dp"
            android:background="@drawable/view_et_gray_blue_selector"
            android:gravity="start"
            android:text="备注内容"
            android:padding="@dimen/base5dp"
            android:textColor="@color/text_title_gray"
            android:textSize="@dimen/base12dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base20dp"/>

    </LinearLayout>
</ScrollView>
