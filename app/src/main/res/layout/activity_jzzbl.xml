<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_color_basic_white"
    android:orientation="vertical"
    tools:context="com.maiyu.hrssc.home.activity.ZMBLActivity">


    <com.maiyu.hrssc.base.view.HeadView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_head_view_hight"
        android:background="@color/project_color_basic_white_pure">

    </com.maiyu.hrssc.base.view.HeadView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/line"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base200dp"/>


    <include
        layout="@layout/view_space_layout"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        >

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/xzzmbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/base5dp"
                android:drawableTop="@mipmap/icon_xzzm"
                android:gravity="center"/>

            <TextView
                android:id="@+id/jhsyzmbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/base5dp"
                android:drawableTop="@mipmap/icon_jhsyzm"
                android:gravity="center"
                android:visibility="invisible"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/xsbxzmbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/base5dp"
                android:drawableTop="@mipmap/icon_xsbxzm"
                android:gravity="center"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/zzzmbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/base5dp"
                android:drawableTop="@mipmap/icon_zzzmbl"
                android:gravity="center"
                android:visibility="invisible"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
