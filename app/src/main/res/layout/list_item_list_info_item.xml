<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/project_color_basic_white_pure">


    <RelativeLayout
        android:id="@+id/title_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base10dp">

        <ImageView
            android:id="@+id/point"
            android:layout_width="@dimen/base5dp"
            android:layout_height="@dimen/base5dp"
            android:src="@drawable/view_point_blue"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base5dp"
            android:layout_toEndOf="@id/point"
            android:text="关于证明办理最新规则"
            android:layout_centerVertical="true"/>
    </RelativeLayout>




    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_name_rl"
        android:layout_marginStart="@dimen/base26dp"
        android:layout_marginTop="@dimen/base5dp"
        android:layout_marginBottom="@dimen/base10dp"
        android:textColor="@color/project_color_general_hyperlink"
        android:textSize="@dimen/project_text_size_dp_12"
        android:text="2017-2-14"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/line"/>
</RelativeLayout>