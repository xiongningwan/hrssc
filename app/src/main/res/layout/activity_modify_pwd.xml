<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_color_basic_white_pure"
    android:orientation="vertical"
    tools:context="com.maiyu.hrssc.my.activity.PersonalInfoActivity">

    <com.maiyu.hrssc.base.view.HeadView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_head_view_hight"
        android:background="@color/project_color_basic_white_pure"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base30dp"
        android:layout_marginStart="@dimen/base30dp"
        android:layout_marginTop="@dimen/base55dp"
        android:orientation="vertical"
        android:background="@drawable/view_stroke_gray_bg">


        <EditText
            android:id="@+id/old_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base43dp"
            android:drawableLeft="@mipmap/icon_mimasuo"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:drawablePadding="@dimen/base10dp"
            android:hint="请输入原始密码"
            android:textSize="@dimen/project_text_size_dp_14"
            android:background="@color/transparent"
            android:textColorHint="@color/project_color_general_text_secondary"
            android:inputType="textPassword"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@mipmap/line"/>

        <EditText
            android:id="@+id/new_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base43dp"
            android:drawableLeft="@mipmap/icon_mimasuo"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:drawablePadding="@dimen/base10dp"
            android:hint="请输入新密码，6-16位数字、字母、字符"
            android:textSize="@dimen/project_text_size_dp_14"
            android:background="@color/transparent"
            android:textColorHint="@color/project_color_general_text_secondary"
            android:inputType="textPassword"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@mipmap/line"/>

        <EditText
            android:id="@+id/new_pwd_confirm_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base43dp"
            android:drawableLeft="@mipmap/icon_mimasuo"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:drawablePadding="@dimen/base10dp"
            android:hint="请再次输入新密码"
            android:textSize="@dimen/project_text_size_dp_14"
            android:background="@color/transparent"
            android:textColorHint="@color/project_color_general_text_secondary"
            android:inputType="textPassword"/>


    </LinearLayout>



    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:layout_marginEnd="@dimen/base30dp"
        android:layout_marginStart="@dimen/base30dp"
        android:layout_marginTop="@dimen/base46dp"
        android:background="@drawable/corner_view_selector"
        android:text="确认修改"
        android:textSize="@dimen/project_text_size_dp_16"
        android:textColor="@color/project_color_basic_white_pure"/>
</LinearLayout>
