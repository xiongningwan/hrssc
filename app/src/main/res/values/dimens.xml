<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">@dimen/base15dp</dimen>
    <dimen name="activity_vertical_margin">@dimen/base20dp</dimen>
    <dimen name="project_text_size_dp_22">@dimen/base22dp</dimen>
    <!-- 用在少数重要标题， 如导航标题、按钮文字 -->
    <dimen name="project_text_size_dp_19">@dimen/base19dp</dimen>
    <!-- 用于大多数文字，如产品名称、列表标题等 -->
    <dimen name="project_text_size_dp_16">@dimen/base16dp</dimen>
    <!-- 用在少数文字 ，tab切换文字、板块标题 -->
    <dimen name="project_text_size_dp_14">@dimen/base14dp</dimen>
    <!-- 用于辅助性文字，如次要的提示文字、备注信息等 -->
    <dimen name="project_text_size_dp_12">@dimen/base12dp</dimen>
    <dimen name="project_text_size_dp_10">@dimen/base10dp</dimen>
    <!-- 用在少数数字，如需要突出的资产、利率数字 -->
    <dimen name="project_text_number_size_dp_44">@dimen/base44dp</dimen>
    <!-- 用在少数数字，如受益、产品利率数字 -->
    <dimen name="project_text_number_size_dp_30">@dimen/base30dp</dimen>
    <!-- 用在少数数字，如时间数，环形进度数字 -->
    <dimen name="project_text_number_size_dp_19">@dimen/base19dp</dimen>
    <!-- 项目头部bar高度 -->
    <dimen name="project_head_view_hight">@dimen/base44dp</dimen>
    <!-- 项目按钮高度 -->
    <dimen name="project_btn_hight">@dimen/base44dp</dimen>

    <dimen name="refresh_header_height_twitter">60dp</dimen>
    <dimen name="load_more_trigger_offset_google">88dp</dimen>
</resources>