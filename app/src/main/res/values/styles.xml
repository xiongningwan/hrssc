<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/project_color_general_hyperlink</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="activity_main_bottom_tab_icon_style">
        <item name="android:layout_width">@dimen/base24dp</item>
        <item name="android:layout_height">@dimen/base24dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_above">@id/activity_main_bottom_tab_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/activity_main_bottom_tab_home_selector</item>
    </style>

    <style name="activity_main_bottom_tab_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/base1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_main_bottom_tab_text_selector</item>
        <item name="android:textSize">@dimen/project_text_size_dp_12</item>
    </style>
